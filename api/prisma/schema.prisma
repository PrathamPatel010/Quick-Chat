generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  global     Int?     @default(0)
  email      String   @unique
  username   String   @unique
  password   String
  pic        String?  @default("https://icon-library.com/images/anonymous-avatar-icon/anonymous-avatar-icon-25.jpg")
  isAdmin    Boolean  @default(false)
  isVerified Boolean? @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Chat {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  global        Int?     @default(0)
  chatName      String
  isGroupChat   Boolean
  latestMessage String   @db.ObjectId
  groupAdmin    String   @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  global    Int?     @default(0)
  sender    String   @db.ObjectId
  content   String
  chat      String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
